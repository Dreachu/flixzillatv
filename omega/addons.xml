<?xml version='1.0' encoding='UTF-8'?>
<addons>
    <!-- REPOS -->
	<addon id="repository.flixzilla" name="Flixzilla Repository" provider-name="Flixzilla" version="1.0">
	<extension point="xbmc.addon.repository" name="Flixzilla Repository">
		<requires>
			<import addon="xbmc.addon" version="12.0.0"/>
		</requires>
		<dir minversion="20.0.0" maxversion="20.9.0">
			<info compressed="false">https://raw.githubusercontent.com/Dreachu/repository.flixzilla/refs/heads/main/nexus/addons.xml</info>
			<datadir zip="true">https://raw.githubusercontent.com/Dreachu/repository.flixzilla/refs/heads/main/nexus/</datadir>
		</dir>
		<dir minversion="20.9.1">
			<info compressed="false">https://raw.githubusercontent.com/Dreachu/repository.flixzilla/refs/heads/main/omega/addons.xml</info>
			<datadir zip="true">https://raw.githubusercontent.com/Dreachu/repository.flixzilla/refs/heads/main/omega/</datadir>
		</dir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">Flixzilla Repository</summary>
        <description lang="en">A repository for Flixzilla.</description>
        <disclaimer></disclaimer>
        <platform>all</platform>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
	</extension>
	
	<!-- FlixzillaTV Client -->
<addon
  id="pvr.flixzilla"
  version="1.0"
  name="FlixzillaTV  Client"
  provider-name="Flixzilla">
  <requires>@ADDON_DEPENDS@
    <import addon="inputstream.ffmpegdirect" minversion="22.0.0"/>
    <import addon="inputstream.adaptive" minversion="22.0.0"/>
    <import addon="inputstream.rtmp" minversion="22.0.0"/>
  </requires>
  <extension
    point="kodi.pvrclient"
    library_@PLATFORM@="@LIBRARY_FILENAME@"/>
  <extension point="xbmc.addon.metadata">
    <platform>@PLATFORM@</platform>
    <license>GPL-2.0-or-later</license>
    <source>https://flixzilla.netlify.app</source>
    <assets>
      <icon>icon.png</icon>
    </assets>
    <summary lang="en_AU">FlixzillaTV client.</summary>
    <summary lang="en_GB">FlixzillaTV client.</summary>
    <summary lang="en_NZ">FlixzillaTV client.</summary>
    <summary lang="en_US">FlixzillaTV client.</summary>
    <description lang="en_AU">FlixzillaTV Client supports m3u playlists, streaming of Live TV for multicast/unicast sources, listening to Radio channels and EPG.</description>
    <description lang="en_GB">FlixzillaTV Client supports m3u playlists, streaming of Live TV for multicast/unicast sources, listening to Radio channels and EPG.</description>
    <description lang="en_NZ">FlixzillaTV Client supports m3u playlists, streaming of Live TV for multicast/unicast sources, listening to Radio channels and EPG.</description>
    <description lang="en_US">FlixzillaTV Client support m3u playlists, streaming of Live TV for multicast/unicast sources, listening to Radio channels and EPG.</description>
  </extension>
</addon>	
</addons>
